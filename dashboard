            orange: '#FB9E23',
            white: '#FFFFFF'
        };

        // --- Render Functions ---

        function renderStats() {
            const container = document.getElementById('stats-container');
            container.innerHTML = stats.map(stat => `
                <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 hover:shadow-md transition-shadow group">
                    <div class="flex items-start justify-between mb-4">
                        <p class="text-sm font-medium text-slate-500">${stat.label}</p>
                        <span class="text-xs font-semibold px-2 py-1 rounded-full flex items-center gap-0.5 ${
                            stat.trend === 'up' ? 'bg-green-50 text-green-600' : 'bg-red-50 text-red-600'
                        }">
                            ${stat.change}
                            <i data-lucide="arrow-up-right" class="w-3 h-3 ${stat.trend === 'down' ? 'rotate-90' : ''}"></i>
                        </span>
                    </div>
                    <h3 class="text-3xl font-bold text-slate-900 group-hover:text-[#FB9E23] transition-colors">${stat.value}</h3>
                </div>
            `).join('');
        }

        function getStatusBadge(status) {
            const styles = {
                "In Progress": "bg-blue-100 text-blue-700 border-blue-200",
                "Review": "bg-purple-100 text-purple-700 border-purple-200",
                "Planning": "bg-amber-100 text-amber-700 border-amber-200",
                "Done": "bg-emerald-100 text-emerald-700 border-emerald-200",
            };
            
            const iconName = {
                "In Progress": "clock",
                "Review": "alert-circle",
                "Planning": "users",
                "Done": "check-circle-2",
            }[status] || "clock";

            return `
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium border ${styles[status]}">
                    <i data-lucide="${iconName}" class="w-3 h-3"></i>
                    ${status}
                </span>
            `;
        }

